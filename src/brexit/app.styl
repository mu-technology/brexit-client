@import '/vote/_vote';


html, body {
	font-family: "Avenir Next";
	height: 100%;
}

header {
	display: flex;
	justify-content: center;
	align-items: center;
}

.main-container {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;

	&.with-background {
		position: relative;

		&::after {
			content: '';
			background: url('assets/brexit-bg.jpg') no-repeat;
			background-size: 100%;
			position: absolute;

			top: 0;
			bottom: 0;
			right: 0;
			left: 0;
			opacity: 0.7;
			z-index: -1;
		}
	}
}
