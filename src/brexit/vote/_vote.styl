vote {

	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 60%;
	height: 80%;
	background: rgba(0,0,0,0.7);
	box-shadow: 5px 5px 5px 0px #333333;

	.vote-intro {
		text-align: justify;
		padding: 5px 25px;
		color: aliceblue;
	}


	.vote-question {
		text-align: center;
		color: aliceblue;
		padding: 25px 50px;
	}

	.options-list {
		list-style: none;

		.options-list-item {
			margin-bottom: 20px;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.option-button {
			background: white;
			padding: 15px 20px;
			font-size: 14px;
			width: 50%;
			cursor: pointer;
			border: 0px;

			&.selected {
				background: lightslategray;
				color: white;
				font-weight: bold;
			}

			&:hover {
				background: #CCCCCC;
				color: white;
			}
		}
	}
}